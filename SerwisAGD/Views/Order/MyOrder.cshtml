@model IEnumerable<SerwisAGD.Models.Order>

@{
    ViewBag.Title = "MyOrder";
}

<h2>Moje zlecenia</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDescryption)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.OrderState)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrderName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderDescryption)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.OrderState)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderDate)
        </td>

        <td>

            @Html.ActionLink("Usuń zamówienie", "DeleteOrder", "Order", new { id = item.OrderID }, null)
        </td>
    </tr>
}

</table>
